package constructor;

public class Second2 {

	public static void main(String[] args) {
		Lappei lp=new Lappei(12390);
		lp.displayprice();
		//latest value
//		lp.price=100;
//		lp.displayprice();
	}
}


class Lappei
{
	double price;
	
	
	public Lappei( double value)
	{
		displayprice();
		price=value;
		
	}
	
	public void displayprice()
	{
		if(price>500)
		{
		System.out.println("the price is :"+price);
		}
		else
		{
			System.out.println("not enough for laptop");
		}

}}


